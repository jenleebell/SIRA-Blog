{{yield}}

{{#if addNewPost}}
<div class='container'>

  <div class='col-md-4'>
    <h1>New Post</h1>

    <form>
        <div class='container'>
          <div class='row'>
            <div class='col-md-12'>
              <h1>Add a comment</h1>
              <form>
                <div class="form-group">
                  <label for="description">Comment</label>
                  <br>
                  {{textarea value=description id="description" rows="8" cols="60"}}
                </div>
                {{new-comment save2="save3"}}
                <button class='btn btn-success' {{action 'save1'}}>Save</button>
              </form>
            </div>
          </div>
        </div>
      

      <button class='btn btn-success' {{action 'save1'}}>Save</button>
    </form>
  </div>
</div>


<br>
<button class='btn btn-warning' {{action 'commentFormShow'}}>New Comment</button>
{{else}}
<br>
<button class='btn btn-info' {{action 'newCommentShow'}}>Add a comment</button>
<br>
{{/if}}
